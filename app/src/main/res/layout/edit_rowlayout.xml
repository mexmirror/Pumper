<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    android:id="@+id/edit_cardview">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/row_edit_device"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:text="ID"
            android:background="@drawable/redcircle"
            android:layout_margin="6dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line_weight_black_24dp"
            android:id="@+id/row_edit_weight"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignTop="@+id/row_edit_device"
            android:layout_toRightOf="@+id/row_edit_device"
            android:layout_toEndOf="@+id/row_edit_device" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_edit_weight_value"
            android:text="0000"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:layout_alignTop="@+id/row_edit_weight"
            android:layout_toRightOf="@+id/row_edit_weight"
            android:layout_toEndOf="@+id/row_edit_weight" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cached_black_24dp"
            android:id="@+id/row_edit_repetition"
            android:layout_alignBottom="@+id/row_edit_device"
            android:layout_alignLeft="@+id/row_edit_weight"
            android:layout_alignStart="@+id/row_edit_weight" />
        <TextView
            android:id="@+id/row_edit_repetition_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/row_edit_repetition"
            android:layout_toRightOf="@+id/row_edit_repetition"
            android:layout_toEndOf="@+id/row_edit_repetition" />
    </RelativeLayout>
</android.support.v7.widget.CardView>