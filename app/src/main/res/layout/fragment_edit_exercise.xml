<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.chiodo.pumper.view.EditExerciseFragment">
    <TextView
        android:background="@drawable/redcircle"
        android:text="ID"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_margin="15dp"
        android:id="@+id/edit_ex_id" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/edit_ex_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/device"
            android:id="@+id/edit_ex_id_value"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_line_weight_black_24dp"
        android:layout_below="@+id/edit_ex_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:id="@+id/edit_ex_weight_image"
        android:contentDescription="@string/weight" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_ex_weight"
        android:layout_alignTop="@+id/edit_ex_weight_image"
        android:layout_toRightOf="@+id/edit_ex_weight_image"
        android:layout_toEndOf="@+id/edit_ex_weight_image">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/weight"
            android:id="@+id/edit_ex_weight_value"
            android:ems="10"
            android:inputType="numberDecimal"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_cached_black_24dp"
        android:layout_alignTop="@+id/edit_ex_weight"
        android:layout_toRightOf="@+id/edit_ex_weight"
        android:layout_toEndOf="@+id/edit_ex_weight"
        android:id="@+id/imageView"
        android:contentDescription="@string/repetitions" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_ex_repetition"
        android:layout_alignTop="@+id/edit_ex_weight_image"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/repetitions"
            android:id="@+id/edit_ex_repetition_value"
            android:ems="10"
            android:inputType="number"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_ex_weight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/edit_ex_save_button"
        android:text="@string/save"/>
</RelativeLayout>
